<h1><%= @article.title %> Comments</h1>

<p id="notice"><%= notice %></p>

<div class = "comments">
  <% @comments.each do |comment| %>
    <div class = "comment">
        <%= link_to "#{comment.created_at.strftime("%H:%M%P %d-%m-%Y")}, by #{comment.user.username}, #{comment.title}, #{comment.status}", article_comment_path(@article, comment) %>
    </div>
  <% end %>
</div>

<%= link_to 'Back', dashboard_path %>